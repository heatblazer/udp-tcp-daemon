<?xml version="1.0" encoding="UTF-8" ?>
<Config xmlns:xlink="http://www.w3.org/1999/xlink"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../schema/recorder-config.xsd"
        version="1.0" >
        <!--the root element-->
<!-- interval to save wav files and to start 
     the new ones -->
<HotSwap interval="10000" />  

<!-- unused for now -->
<Channels count="32" />

<!-- setup for the wav header -->
<!-- endiness: (unused) if require endian swap of the data -->
<!-- checksum -->
<Wave samplesPerFrame="8000" 
     bitsPerSec="16"
     fmtLength="16"
     audioFormat="1"
     channels="1"
     endiness="LE"
     />
     
<Record 
    dir="/records/"
    hasTimeStamp="true"
    hasNumericConvention="true"
    />

<Network transport="udp"
         port="1234" 
         />
<!-- name of file, path and timestamp appended -->
<Log
    name="recorder.log"
    path="/logs/"
    time="enabled"
/>
<!-- if we want to report to a host a hearbeat -->
<Heartbeat
    timeout="2000"
    port="5678"
    host="127.0.0.1"
    enabled="false"
    />

</Config>
