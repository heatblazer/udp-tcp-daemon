<?xml version="1.0" encoding="UTF-8" ?>
<Config xmlns:xlink="http://www.w3.org/1999/xlink"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../schema/recorder-config.xsd"
        version="1.0" >
        <!--the root element-->

<Audio>
    <HotSwap interval="10000" />  <!-- 10000 msec for now -->
    <Channels count="32" />
    
    <!-- setup for the wav header -->
    <!-- endiness: if require endian swap of the data -->
    <!-- checksum -->
    <Wave samplesPerFrame="8000" 
         bitsPerSec="16"
         riffLength="16"
         audioFormat="1"
         channels="1"
         />
         
    <Record 
        hasTimeStamp="true"
        hasNumericConvention="true"
        />
        
</Audio>

<Network transport="udp"
         port="1234" 
         />
<!-- name of file, path and timestamp appended -->
<Log
    name="recorder.log"
    path="/logs/"
    time="enabled"
/>

</Config>
